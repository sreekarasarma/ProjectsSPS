<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/callDriverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/call_a_driver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp" />

    <Button
        android:id="@+id/dialDriverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dial_a_driver"
        app:layout_constraintTop_toBottomOf="@id/callDriverButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/browseDriverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/browse_a_driver"
        app:layout_constraintTop_toBottomOf="@id/dialDriverButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>